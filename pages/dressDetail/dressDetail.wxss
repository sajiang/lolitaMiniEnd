
.fixTab{
  position: fixed;
  top: 0rpx;
  left: 0;
  z-index: 1;
  width: 100%;
  color: white;
  background:linear-gradient(rgba(0,0,0,0.5),rgba(255,255,255,0.5));
  white-space: nowrap;
  overflow-x: scroll;
  padding-bottom: 20rpx;
}
.fixTab::-webkit-scrollbar {
  display: none;
}
.tabTitle{
  display: inline-block;
  font-size: 24rpx;
  padding: 10rpx 30rpx ;
  min-width:110rpx; 
  box-sizing: border-box;
  text-align: center;
}
.checkedTab{
  font-size: 30rpx;
  color: #ffa4ce;
  border-top: 12rpx solid #ffa4ce;
}
.flowers{
  width: 148rpx;
  height:35rpx;
}
.prices{
  display: flex;
  justify-content: center;
  align-items:center;
}
.prices .diagonal{
  margin: 0 20rpx;
}
.imgs{
  width: 100%;
}

@keyframes aniShow{  
      0% {top: -20rpx;}  
    100% {top: 0;}  
}
.showDetail {
  animation:aniShow 0.5s ease; 
  position: relative;
  width: 100%;
  margin-top: 50rpx;
  padding-bottom: 200rpx;
}
.hideDetail {
  position: relative;
  width: 100%;
  display: none;
}

.bottom{
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: rgba(0,0,0,0.85);
  color: white;
  border-top-left-radius: 60rpx;
  border-top-right-radius: 60rpx;
}

.controlBar{
  display: inline-block;
  background: rgba(255,255,255,0.3);
  width: 88rpx;
  height: 12rpx;
  border-radius: 6rpx;
}
.title{
  padding: 20rpx 40rpx 10rpx 50rpx; 
  display: flex;
  align-items: center;
  box-sizing: border-box;
}
.title .collect{
  width: 88rpx;
  height: 88rpx;
  background: #f1d7df;
  justify-content: center; 
}
@keyframes aniHideInfo{  
      0% {height: 360rpx;}  
    100% {height: 0rpx;}  
}
@keyframes aniShowInfo{  
      0% {height: 0rpx;}  
    100% {height: 360rpx;}  
}
.hideInfo {
  animation:aniHideInfo 0.5s ease; 
  height: 0rpx;
}
.info{
  animation:aniShowInfo 0.5s ease;   
  padding: 0rpx 40rpx 50rpx 40rpx;
  height: 360rpx;
  overflow-y: scroll;
}
.time{
  margin-top: 50rpx;
}
.diagonal{
  width: 2rpx;
  height: 82rpx;
  background: #d2d2d2;
  transform: rotate(26deg);
  display: inline-block;
}